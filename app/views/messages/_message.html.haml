.chat-main__messages-box
  .chat-main__messages-box__info
    .chat-main__messages-box__info__name
      = message.user.name
    .chat-main__messages-box__info__daytime
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__messages-box__message
    - if message.content.present?
      %p.chat-main__messages-box__message
        = message.content
    = image_tag message.image.url, class: 'chat-main__messages-box__message__image' if message.image.present?

